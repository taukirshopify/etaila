{% style %}

img.gallery-img {
    max-width: 564px;
    width: 100%;
    height: 564px;
    object-fit: cover;
    object-position: center center;
    flex: 0 0 calc(50% - 5px);
}
.gallery-body {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
}
.hide {
  display: none;
}
  ul.filter-list {
    padding: 0;
    list-style: none;
    margin: 0;
}

.filter-by {
    display: flex;
    gap: 14px;
    align-items: center;
      max-width: 285px;
    width: 100%;
}
  /* Dropdown Styles */
.dropdown {
    position: relative;
    display: inline-block;
  max-width: 196px;
    width: 100%;
}

.filter-list {
    display: none;
    position: absolute;
    background-color: #fff;
    min-width: 196px;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    z-index: 1;
}

.filter-list li {
       padding: 5px 14px;
    cursor: pointer;
    font-size: 14px;
    font-family: 'Montserrat';
    color: #000;
    opacity: .6;
    letter-spacing: 0;
}

.filter-list li:hover {
    background-color: #ddd;
}

.dropbtn {
       background-color: transparent;
    color: #000;
    opacity: .6;
    font-family: 'Montserrat';
    padding: 14px;
    font-size: 14px;
    border: none;
    cursor: pointer;
    width: 100%;
    text-align: left;
    border: 1px solid #B4BBC3;
}

.dropdown svg.icon.icon-caret {
    position: absolute;
    width: 10px;
    right: 14px;
    top: 21px;
    pointer-events: none;
}
  .gallery-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
}

.gallery-header h1 {
    margin: 0;
    font-size: 25px;
    font-weight: 700;
    letter-spacing: 0;
  text-transform: uppercase;
}

.gallery-section {
    padding-top: 60px;
    padding-bottom: 60px;
}

  @media (max-width: 941px) {
    img.gallery-img {
    width: calc(50% - 5px);
    height: auto;
}
  }
  @media (max-width: 600px) {
    .gallery-header {
    flex-direction: column;
    gap: 20px;
}
  }
{% endstyle %}
<div class="gallery-section">
  <div class="page-width">
    <div class="gallery-header">
      {% if section.settings.heading %}
        <h1 class="gallery-title">{{ section.settings.heading }}</h1>
      {% endif %}
      
      <div class="filter-by">
        Filter by:
        <div class="dropdown">
          <button class="dropbtn">All</button>
          {% render 'icon-caret' %}
          <ul class="filter-list">
              <li>All</li>
              <li>Shirts</li>
              <li>Bottoms</li>
              <li>Outerwear</li>
              <li>Denim</li>
          </ul>
        </div>
      </div>
    </div>
    <div class="gallery-body">
      {% for block in section.blocks %}
        <img src="{{ block.settings.image | img_url: 'master' }}" class="gallery-img{% if block.settings.shirts %} shirts {% endif %}{% if block.settings.bottoms %} bottoms {% endif %}{% if block.settings.outerwear %} outerwear {% endif %}{% if block.settings.denim %} denim {% endif %}">

      {% endfor %}
    </div>

  </div>
</div>
<script>
$(document).ready(function(){
    $(".dropbtn").on("click", function() {
        $(".filter-list").toggle(); // Toggle show/hide for the list
    });

    $(".filter-list li").on("click", function() {
        let filterValue = $(this).text().toLowerCase(); // Get the filter value

        // Update the button text
        $(".dropbtn").text($(this).text()); 

        // Update the gallery title
        if(filterValue === "all") { 
            $(".gallery-title").text("{{ section.settings.heading }}"); // If 'All' is selected, just show 'Gallery'
        } else {
            $(".gallery-title").text("{{ section.settings.heading }} - " + $(this).text()); // If any specific filter is selected, show 'Gallery - FilterName'
        }

        // Apply filter on images
        if(filterValue === "all") { 
            $(".gallery-img").removeClass("hide");
        } else {
            $(".gallery-img").addClass("hide");
            $(".gallery-img." + filterValue).removeClass("hide");
        }
        
        // Hide the dropdown after any selection
        $(".filter-list").hide();
    });
    
    // Hide the dropdown if clicked outside
    $(document).on("click", function(event) {
        if (!$(event.target).closest(".dropdown").length) {
            $(".filter-list").hide();
        }
    });
});

</script>
